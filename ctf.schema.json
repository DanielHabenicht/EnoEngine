{
  "type": "object",
  "properties": {
    "title": { "$ref": "#/$defs/string" },
    "flagValidityInRounds": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "description": "Validity of a flag in rounds."
    },
    "checkedRoundsPerRound": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4294967295,
      "description": "Number of times a flag is checked per round."
    },
    "roundLengthInSeconds": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4294967295,
      "description": "The length of one round in seconds."
    },
    "dnsSuffix": { "type": "string", "description": "The DNS Suffix." },
    "teamSubnetBytesLength": {
      "type": "integer",
      "description": "Team Subnet byte length.",
      "minimum": 0,
      "maximum": 4294967295
    },
    "flagSigningKey": { "type": "string", "description": "The Signing Key for the flags." },
    "encoding": { "enum": ["Legacy", "UTF8"], "description": "Encoding of the flags" },
    "teams": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "minimum": 1, "maximum": 4294967295 },
          "name": { "type": "string" },
          "active": { "type": ["boolean", "null"] },
          "address": { "type": "string" },
          "countryCode": { "type": "string" },
          "logoUrl": { "type": "string", "format": "uri" },
          "teamSubnet": { "type": "string" }
        },
        "required": ["id", "name", "address", "teamSubnet"],
        "description": "All Teams participating in the CTF."
      },
      "description": "All Teams participating in the CTF.",
      "minItems": 1,
      "uniqueItems": true
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "The id of the service.", "minimum": 1, "maximum": 4294967295 },
          "name": { "$ref": "#/$defs/string" },
          "active": { "type": "boolean", "description": "Whether the Service is active or not." },
          "checkers": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri",
              "description": "The fully specified URL address for each checker"
            },
            "description": "The fully specified URL address for each checker",
            "minItems": 1
          },
          "flagsPerRoundMultiplier": {
            "type": "integer",
            "description": "Multiplier for flags send per Round.",
            "minimum": 1,
            "maximum": 4294967295
          },
          "havocsPerRoundMultiplier": {
            "type": "integer",
            "description": "Multiplier for havocs send per Round.",
            "minimum": 1,
            "maximum": 4294967295
          },
          "noisesPerRoundMultiplier": {
            "type": "integer",
            "description": "Multiplier for noise send per Round.",
            "minimum": 1,
            "maximum": 4294967295
          },
          "weightFactor": {
            "type": "integer",
            "description": "The weight for scoring this service.",
            "minimum": 0,
            "maximum": 4294967295
          }
        },
        "required": [
          "name",
          "checkers",
          "flagsPerRoundMultiplier",
          "havocsPerRoundMultiplier",
          "noisesPerRoundMultiplier",
          "weightFactor"
        ],
        "description": "All Services used in this CTF."
      },
      "description": "All Services used in this CTF.",
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "title",
    "flagValidityInRounds",
    "checkedRoundsPerRound",
    "roundLengthInSeconds",
    "dnsSuffix",
    "teamSubnetBytesLength",
    "flagSigningKey",
    "encoding",
    "teams",
    "services"
  ],
  "$defs": { "string": { "type": "string", "description": "The title of the event." } }
}
